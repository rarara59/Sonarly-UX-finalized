{
  "name": "thorp-trading-system",
  "version": "1.0.0",
  "type": "module",
  "description": "Renaissance-grade meme coin trading system with production infrastructure",
  "main": "system-main.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node system-main.js",
    "dev": "node --inspect system-main.js",
    "test": "npm run test:day2:enhanced",
    "test:day2": "node scripts/test-day2-checkpoints.js",
    "test:day2:enhanced": "node --expose-gc scripts/test-day2-checkpoints.js",
    "test:day2:verbose": "node --expose-gc scripts/test-day2-checkpoints.js --verbose",
    "test:day2:basic": "node scripts/test-day2-checkpoints.js",
    "test:foundation": "node scripts/test-foundation.js",
    "health": "curl -s http://localhost:3000/health | jq",
    "stop": "pkill -f system-main.js"
  },
  "dependencies": {
    "bs58": "^6.0.0",
    "dotenv": "^16.6.1",
    "node-fetch": "^3.3.2",
    "pino": "^9.8.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rarara59/thorpv1.git"
  },
  "keywords": [
    "trading",
    "solana",
    "meme-coins",
    "defi",
    "rpc",
    "renaissance"
  ],
  "author": "Thorp Trading Team",
  "license": "UNLICENSED",
  "private": true,
  "bugs": {
    "url": "https://github.com/rarara59/thorpv1/issues"
  },
  "homepage": "https://github.com/rarara59/thorpv1#readme"
}
