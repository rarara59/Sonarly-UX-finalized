# ========= RPC ENDPOINTS =========
HELIUS_RPC_URL=https://mainnet.helius-rpc.com/?api-key=your_helius_key_here
CHAINSTACK_RPC_URL=https://solana-mainnet.core.chainstack.com/your_chainstack_key_here
PUBLIC_RPC_URL=https://api.mainnet-beta.solana.com

# ========= PER-ENDPOINT OVERRIDES =========
HELIUS_WEIGHT=60
HELIUS_RPS_LIMIT=50
HELIUS_CONCURRENCY_LIMIT=10
HELIUS_TIMEOUT_MS=2000

CHAINSTACK_WEIGHT=30
CHAINSTACK_RPS_LIMIT=40
CHAINSTACK_CONCURRENCY_LIMIT=10
CHAINSTACK_TIMEOUT_MS=2500

PUBLIC_WEIGHT=10
PUBLIC_RPS_LIMIT=10
PUBLIC_CONCURRENCY_LIMIT=5
PUBLIC_TIMEOUT_MS=4000

# ========= GLOBAL DEFAULTS =========
RPC_DEFAULT_RPS_LIMIT=50
RPC_DEFAULT_CONCURRENCY_LIMIT=10
RPC_DEFAULT_TIMEOUT_MS=2000
RPC_RATE_WINDOW_MS=1000
RPC_MAX_IN_FLIGHT_GLOBAL=200

# ========= QUEUE CONFIG =========
RPC_QUEUE_MAX_SIZE=1000
RPC_QUEUE_DEADLINE_MS=5000
RPC_QUEUE_REJECT_FAST_MS=10

# ========= CIRCUIT BREAKER =========
RPC_BREAKER_ENABLED=true
RPC_BREAKER_FAILURE_THRESHOLD=5
RPC_BREAKER_COOLDOWN_MS=60000
RPC_BREAKER_HALF_OPEN_PROBES=1

# ========= HEDGING STRATEGY =========
RPC_HEDGING_ENABLED=true
RPC_HEDGING_DELAY_MS=200
RPC_HEDGING_MAX_EXTRA=1
RPC_ABORT_HEDGE_ON_PRIMARY_SUCCESS=true

# ========= HEALTH MONITORING (FIXED - now configurable) =========
RPC_HEALTH_INTERVAL_MS=30000
RPC_HEALTH_JITTER_MS=5000
RPC_HEALTH_PROBE_TIMEOUT_MS=1000
RPC_HEALTH_PROBE_RPS_LIMIT=2

# ========= CONNECTION MANAGEMENT =========
RPC_KEEP_ALIVE_ENABLED=true
RPC_KEEP_ALIVE_SOCKETS=50
RPC_KEEP_ALIVE_MSECS=30000

# ========= DETECTION CONFIG =========
MIN_EDGE_SCORE=60
MIN_LIQUIDITY_USD=10000
MAX_HOLDER_CONCENTRATION=0.3
MIN_MARKET_CAP_USD=50000
MAX_MARKET_CAP_USD=10000000
MIN_TOKEN_AGE_MINUTES=30
MAX_TOKEN_AGE_HOURS=24

# ========= ALPHA-SNIFF CONFIG =========
ALPHA_SNIFF_ENABLED=true
ALPHA_LOOKBACK_HOURS=6
ALPHA_MIN_PURCHASE_USD=1000
ALPHA_TOP_WALLETS_LIST=wallet1,wallet2,wallet3

# ========= TRADING CONFIG =========
TRADING_ENABLED=true
GLOBAL_KILL_SWITCH=false
MAX_POSITION_SIZE_USD=1000
DAILY_LOSS_LIMIT_USD=500
MAX_SLIPPAGE_BPS=500
PRIORITY_FEE_MICROLAMPORTS=10000
DEFAULT_TRADE_SIZE_USD=100

# ========= MONITORING =========
TWILIO_ENABLED=false
TWILIO_ACCOUNT_SID=your_sid
TWILIO_AUTH_TOKEN=your_token
TWILIO_PHONE=+1234567890
ALERT_PHONE=+1987654321

# ========= LOGGING =========
LOG_LEVEL=info
LOG_JSON=true
TRACE_REQUEST_IDS=true
RPC_ERROR_STACKS=false

# ========= WALLET =========
PRIVATE_KEY_PATH=./secrets/wallet.json
WALLET_PASSWORD=your_secure_password

# ========= HTTP Agent Configuration =========
HTTP_KEEP_ALIVE=true
HTTP_KEEP_ALIVE_MSECS=30000
HTTP_FREE_SOCKET_TIMEOUT=60000
HTTP_MAX_SOCKETS_PER_ENDPOINT=10
HTTP_MAX_FREE_SOCKETS_PER_ENDPOINT=5

# ========= Agent monitoring =========
AGENT_STATUS_INTERVAL_MS=10000